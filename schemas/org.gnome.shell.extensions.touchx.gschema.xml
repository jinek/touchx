<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="touchx">
  <schema id="org.gnome.shell.extensions.touchx" path="/org/gnome/shell/extensions/touchx/">
    <key type="b" name="ripple">
      <default>true</default>
      <summary>Touch ripple</summary>
      <description>Touch ripple On or Off.</description>
    </key>
    <key type="i" name="radius">
      <default>50</default>
      <summary>Radius</summary>
      <description>Radius of the ripple.</description>
    </key>
    <key type="as" name="bgcolor">
      <default>['0.7', '0.7', '0.7']</default>
      <summary>BG Color (RGB)</summary>
      <description>Background Color of Ripple.</description>
    </key>
    <key type="i" name="time">
      <default>10</default>
      <summary>Time</summary>
      <description>Time of the ripple.</description>
    </key>
    <key type="b" name="oskbtn">
      <default>false</default>
      <summary>OSK Panel Button</summary>
      <description>OSK Panel Button to force enable/disable OSK mode.</description>
    </key>
    <key type="b" name="lastoskon">
      <default>true</default>
      <summary>Last OSK Mode</summary>
      <description>Last OSK Mode selected by user.</description>
    </key>
  </schema>
</schemalist>
